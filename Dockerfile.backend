# Dockerfile.backend
FROM node:20-alpine

WORKDIR /app

# Copiar package files
COPY backend/package*.json ./

# Instalar dependencias
RUN npm ci

# Copiar código fuente completo (src Y Routes)
COPY backend/ ./

# Compilar TypeScript
RUN npm run build

# ⭐ Exponer puerto 5000
EXPOSE 5000

# Variables de entorno
ENV PORT=5000
ENV NODE_ENV=production

# Iniciar con el archivo compilado
CMD ["node", "dist/src/index.js"]